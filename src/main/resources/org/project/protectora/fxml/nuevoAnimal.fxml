<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #F3EED9;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.protectora.controllers.NuevoAnimalController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="850.0">
         <children>
            <Label text="Velma" textFill="#57423f">
               <font>
                  <Font name="Comic Sans MS" size="40.0" />
               </font></Label>
            <Button fx:id="inicio" mnemonicParsing="false" prefHeight="70.0" prefWidth="75.0" style="-fx-background-color: #E19992;">
               <graphic>
                  <ImageView fitHeight="45.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/salir.png" />
                     </image></ImageView>
               </graphic></Button>
         </children></HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="450.0" spacing="30.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label text="Nombre">
                           <font>
                              <Font name="Comic Sans MS" size="13.0" />
                           </font></Label>
                        <TextField fx:id="nombreAnimal" promptText="Nombre del animal">
                           <font>
                              <Font name="Comic Sans MS" size="13.0" />
                           </font></TextField>
                     </children>
                     <padding>
                        <Insets left="125.0" right="125.0" />
                     </padding></VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label text="Color">
                           <font>
                              <Font name="Comic Sans MS" size="13.0" />
                           </font></Label>
                        <ChoiceBox fx:id="colores" prefWidth="150.0" style="-fx-border-color: #E19992; -fx-background-color: #F3EED9;" />
                     </children></VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label text="Sexo">
                           <font>
                              <Font name="Comic Sans MS" size="13.0" />
                           </font></Label>
                        <ChoiceBox fx:id="sexos" prefWidth="150.0" style="-fx-border-color: #E19992; -fx-background-color: #F3EED9;" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Label text="Fecha de nacimiento">
                           <font>
                              <Font name="Comic Sans MS" size="13.0" />
                           </font></Label>
                        <DatePicker promptText="mm/dd/yyyy" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label text="Fecha de entrada en Velma">
                           <font>
                              <Font name="Comic Sans MS" size="13.0" />
                           </font></Label>
                        <DatePicker promptText="mm/dd/yyyy" />
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="540.0" spacing="30.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Label text="¿Está castrado?">
                           <font>
                              <Font name="Comic Sans MS" size="13.0" />
                           </font></Label>
                        <ChoiceBox fx:id="castrado" prefWidth="150.0" style="-fx-border-color: #E19992; -fx-background-color: #F3EED9;" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label text="¿Lleva chip?">
                           <font>
                              <Font size="13.0" />
                           </font></Label>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                           <children>
                              <ChoiceBox fx:id="chip" prefWidth="150.0" style="-fx-border-color: #E19992; -fx-background-color: #F3EED9;" />
                              <TextField fx:id="numeroChip" disable="true" promptText="Nº de chip">
                                 <font>
                                    <Font name="Comic Sans MS" size="13.0" />
                                 </font></TextField>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Label text="Tipo">
                                 <font>
                                    <Font name="Comic Sans MS" size="13.0" />
                                 </font>
                              </Label>
                              <ChoiceBox fx:id="tipos" prefWidth="150.0" style="-fx-border-color: #E19992; -fx-background-color: #F3EED9;" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Label text="Raza">
                                 <font>
                                    <Font name="Comic Sans MS" size="13.0" />
                                 </font></Label>
                              <ChoiceBox fx:id="razas" disable="true" prefWidth="150.0" style="-fx-border-color: #E19992; -fx-background-color: #F3EED9;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label text="Tamaño">
                           <font>
                              <Font name="Comic Sans MS" size="13.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="tamanios" disable="true" prefWidth="150.0" style="-fx-border-color: #E19992; -fx-background-color: #F3EED9;" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label text="Imagen del animal">
                           <font>
                              <Font name="Comic Sans MS" size="13.0" />
                           </font></Label>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Button fx:id="examinar" mnemonicParsing="false" style="-fx-background-color: #E19992;" text="Examinar" textFill="WHITE">
                                 <font>
                                    <Font name="Comic Sans MS" size="13.0" />
                                 </font>
                              </Button>
                              <Label fx:id="mensajeExaminar" text="Ningún archivo adjuntado" textFill="#57423f">
                                 <font>
                                    <Font name="Comic Sans MS" size="11.0" />
                                 </font>
                              </Label>
                           </children></HBox>
                     </children>
                  </VBox>
               </children></VBox>
         </children></HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <children>
            <Button fx:id="enviar" mnemonicParsing="false" style="-fx-background-color: #E19992;" text="Enviar" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="13.0" />
               </font></Button>
            <Button fx:id="limpiar" mnemonicParsing="false" style="-fx-background-color: #E19992;" text="Limpiar" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="13.0" />
               </font></Button>
         </children>
      </HBox>
   </children>
</VBox>
